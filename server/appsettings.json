{
    "ffmpeg": 
    {
        "global_defaults" : 
        {
            "paralogue" : "-hide_banner -loglevel error -video_size 1920x1080 -framerate 60 -vsync 2",
            "epilogue" :  "-crf 23 -tune zerolatency -preset ultrafast -f mpegts pipe:1"
        },
        "specific_defaults": 
        {
            "linux": 
            {
                "capture" : "-f x11grab",
                "i" : "-i :0.0+0,0",
                "vcodec": "-vcodec h264"
            },
            "linux_hwaccel_vaapi": 
            {
                "vaapi_device": "-vaapi_device /dev/dri/renderD128",
                "capture" : "-f x11grab",
                "i" : "-i :0.0+0,0",
                "vf" : "-vf format=nv12,hwupload",
                "vcodec" : "-vcodec h264_vaapi"
            },
            "windows": 
            {
                "capture" : "-f dshow",
                "i" : "-i video=UScreenCapture",
                "vf" : "-vf format=nv12,hwupload",
                "vcodec" : "-vcodec h264"
            },
            "osx": 
            {
                "capture" : "-f avfoundation",
                "i" : "-i 0", 
                "vf" : "-vf format=nv12,hwupload", 
                "vcodec" : "-vcodec h264"
            }
        }
    },
    "network": {
        "port": "9001",
        "BufferReadSize": "4096"
    }
}