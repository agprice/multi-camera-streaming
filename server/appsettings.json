{
    "ffmpeg": 
    {
        "global_defaults" : 
        {
            "paralogue" : 
            {
                "prelogs" : "hide_banner -loglevel error",
                "video_size" : "-video_size 1920x1080",
                "framerate" : "-framerate 60",
                "vsync" : "-vsync 2"
            },
            "epilogue" : 
            {
                "crf" : "-crf 23",
                "tune" : "-tune zerolatency",
                "preset" : "-preset ultrafast",
                "output_format" : "-f mpegts pipe:1"
            }
        },
        "specific_defaults": 
        {
            "linux": 
            {
                "capture" : "-f x11grab",
                "i" : "-i :0.0+0,0",
                "vcodec": "-vcodec h264"
            },
            "linux_hwaccel_vaapi": 
            {
                "vaapi_device": "-vaapi_device /dev/dri/renderD128",
                "capture" : "-f x11grab",
                "i" : "-i :0.0+0,0",
                "vf" : "-vf format=nv12,hwupload",
                "vcodec" : "-vcodec h264_vaapi"
            },
            "windows": 
            {
                "capture" : "-f dshow",
                "i" : "-i video=UScreenCapture",
                "vf" : "-vf format=nv12,hwupload",
                "vcodec" : "-vcodec h264"
            },
            "osx": 
            {
                "capture" : "-f avfoundation",
                "i" : "-i 0", 
                "vf" : "-vf format=nv12,hwupload", 
                "vcodec" : "-vcodec h264"
            }
        }
    },
    "network": {
        "port": "9001",
        "BufferReadSize": "4096"
    }
}